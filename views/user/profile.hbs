<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row d-flex justify-content-center pt-3">
                            <div>
                                <h4 class="card-title pt-2">My Profile</h4>
                                <hr class="bg-primary" style="width: 50%; border: none;height: 2px;">


                            </div>

                        </div>
                        <div>

                            <form class="forms-sample" action="/user/edit-user" method="post">
                                <input type="text" name="id" value="{{user._id}}" hidden>
                                <div class="form-group">
                                    <label for="cstitle">Username</label>
                                    <input value="{{user.Username}}" name="Username" type="text" class="form-control"
                                        id="no" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <label for="cstitle">Email</label>
                                    <input value="{{user.Email}}" name="Email" type="email" class="form-control"
                                        id="title" placeholder="Email">
                                </div>

                                <div class="form-group">
                                    <label for="cstitle">Phone</label>
                                    <input value="{{user.Phone}}" name="Phone" type="tel" class="form-control"
                                        id="title" placeholder="Phone">
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                    <button class="btn btn-light">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>