<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row d-flex justify-content-center pt-3">
                            <div>
                                <h4 class="card-title pt-2">Change Password</h4>
                                <hr class="bg-primary" style="width: 50%; border: none;height: 2px;">

                            </div>
                        </div>
                        <div>

                            <form id="change_admin_pass" class="forms-sample">
                                <input type="text" name="id" value="{{user._id}}" hidden>

                                <div class="form-group">
                                    <label for="cstitle">Current Password</label>
                                    <input name="CurrentPass" type="password" class="form-control"
                                        id="crntpass" placeholder="Current Password">
                                </div>

                                <div class="form-group ">
                                    <label for="exampleInputEmail3">Password</label>

                                    <input onkeyup="validate_password1(this.value)" required name="Password"
                                        type="password" class="form-control form-control-lg" id="password"
                                        placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Confirm Password</label>

                                    <input onkeyup="validate_password(this.value)" required name="CnfPassword"
                                        type="text" class="form-control form-control-lg" id="cnfPass"
                                        placeholder="Confirm Password">

                                    <span id="error" style="display: none;" class="text-danger">Password doesnot
                                        match</span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                    <button class="btn btn-light">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>